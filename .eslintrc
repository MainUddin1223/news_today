  // .eslintrc
{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  // HERE
  "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended", "prettier"],

  "rules": {
    "@typescript-eslint/no-unused-vars": "error",
    "@typescript-eslint/consistent-type-definitions": ["error", "type"],
    "@typescript-eslint/no-unsafe-assignment": ["error", { "checkInterface": true }],
    "@typescript-eslint/no-unsafe-call": ["error", { "checkInterface": true }],
    "@typescript-eslint/no-unsafe-member-access": ["error", { "checkInterface": true }],
    "no-unused-vars": "error",
    "no-unused-expressions": "error"
  },

  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  }
}